{
  "manifest_version": 3,
  "name": " ",
  "version": "0.0.1",
  "description": "A Chrome extension that brings ChatGPT, Perplexity, and Gemini to your browser side panel",
  "permissions": [
    "sidePanel",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "tabs",
    "storage",
    "cookies",
    "identity",
    "scripting"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": ""
  },
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.perplexity.ai/*",
    "https://www.perplexity.ai/*",
    "https://perplexity.ai/*",
    "https://*.genspark.ai/*",
    "https://www.genspark.ai/*",
    "https://genspark.ai/*",
    "https://*.tongyi.com/*",
    "https://www.tongyi.com/*",
    "https://tongyi.com/*",
    "https://*.doubao.com/*",
    "https://www.doubao.com/*",
    "https://doubao.com/*",
    "https://gemini.google.com/*",
    "https://aistudio.google.com/*",
    "https://accounts.google.com/*",
    "https://www.google.com/*",
    "https://claude.ai/*",
    "https://chat.deepseek.com/*",
    "https://*.deepseek.com/*",
    "https://deepseek.com/*",
    "https://notebooklm.google.com/*",
    "https://ima.qq.com/*",
    "https://*.ptlogin2.qq.com/*",
    "https://ssl.ptlogin2.qq.com/*",
    "https://xui.ptlogin2.qq.com/*",
    "https://attention-span-tracker.netlify.app/*",
    "https://grok.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://*.perplexity.ai/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*",
        "https://*.genspark.ai/*",
        "https://www.genspark.ai/*",
        "https://genspark.ai/*",
        "https://*.tongyi.com/*",
        "https://www.tongyi.com/*",
        "https://tongyi.com/*",
        "https://*.doubao.com/*",
        "https://www.doubao.com/*",
        "https://doubao.com/*",
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*",
        "https://accounts.google.com/*",
        "https://www.google.com/*",
        "https://claude.ai/*",
        "https://chat.deepseek.com/*",
        "https://*.deepseek.com/*",
        "https://deepseek.com/*",
        "https://notebooklm.google.com/*",
        "https://ima.qq.com/*",
        "https://*.ptlogin2.qq.com/*",
        "https://ssl.ptlogin2.qq.com/*",
        "https://xui.ptlogin2.qq.com/*",
        "https://attention-span-tracker.netlify.app/*",
        "https://grok.com/*"
      ],
      "all_frames": true,
      "run_at": "document_end",
      "js": [
        "content-scripts/url-sync.js"
      ]
    }
  ],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "bypass_headers",
        "enabled": true,
        "path": "rules/bypass-headers.json"
      }
    ]
  }
}
